{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gcc",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Calculate",
            "args": [
                "-Wallg",
                "-o",
                "Debug/calculate.out",
                "calculate.c"
            ],
            "suppressTaskName": true
        },
        {
            "taskName": "Test",
            "args": [
                "-g",
                "-o",
                "Debug/test.out",
                "test.c"
            ],
            "suppressTaskName": true
        },
        {
            "taskName": "debugMain",
            "args": [
                "-Wall", "-g", "-o", "Debug/main.out", "main.c"
            ],
            "suppressTaskName": true
        }
    ]
}